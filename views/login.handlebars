<h2>User Login</h2>

<div class="row form-container">
  <div class="col s12 m8 offset-m2 offset">
    <form class="form login-form">
      <div class="form-group">
        <label for="email-login">email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group bottom-space">
        <label for="password-login">password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group center">
        <button class="myButton" type="submit">Login</button>
      </div>
    </form>
  </div>
</div>

<div style="text-align: center;">
  <a class="myLink" href="/signup">Sign-up for a new account</a>
</div>

<script src="./js/login.js"></script>